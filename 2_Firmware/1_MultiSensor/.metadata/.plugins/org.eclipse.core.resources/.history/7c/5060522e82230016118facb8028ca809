status_t UTILITIES_ShiftInRightBit_16(uint16_t *p_16bit, bool bit)
{
	if(bit)
	{
		*p_16bit = (*p_16bit << 1) | 0x0001;
	}
	else
	{
		*p_16bit = (*p_16bit << 1) & 0xFFFE;
	}
}


